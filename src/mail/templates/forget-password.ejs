<div
  style="
    font-family: 'Arial', sans-serif;
    max-width: 600px;
    margin: 0 auto;
    padding: 0;
    background: #ffffff;
    border-radius: 12px;
    border: 1px solid #e8e8e8;
    overflow: hidden;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
  "
>
  <!-- Header Banner -->
  <div
    style="
      background: linear-gradient(135deg, #8400e7 0%, #6a00c8 100%);
      padding: 30px 20px;
      text-align: center;
    "
  >
    <img
      src="https://i.postimg.cc/htWWjt4B/logo-y.jpg"
      alt="Company Logo"
      style="
        height: 80px;
        margin-bottom: 15px;
        border-radius: 50%;
        border: 2px solid white;
      "
    />
    <h1 style="color: white; font-size: 26px; margin: 0; font-weight: 600">
      <%= msgs.passResetReq %>
    </h1>
  </div>

  <!-- Content Section -->
  <div style="padding: 30px">
    <p
      style="
        font-size: 16px;
        line-height: 1.6;
        color: #555;
        margin-bottom: 25px;
      "
    >
      Hello <%= username %>,<br />
      <%= msgs.weReceived %>
    </p>

    <!-- Reset Code Display -->
    <div
      style="
        background: #f8f5ff;
        border-radius: 8px;
        padding: 20px;
        text-align: center;
        margin: 30px 0;
        border: 1px dashed #d1c4e9;
      "
    >
      <p style="font-size: 14px; color: #666; margin: 0 0 10px 0">
        Your verification code:
      </p>
      <div
        style="
          display: inline-block;
          background: #8400e7;
          color: white;
          font-size: 28px;
          font-weight: 700;
          letter-spacing: 4px;
          padding: 12px 30px;
          border-radius: 6px;
          margin: 10px 0;
        "
      >
        <%= code %>
      </div>
      <p style="font-size: 13px; color: #888; margin: 15px 0 0 0">
        <%= msgs.expireCode %>
      </p>
    </div>

    <!-- Security Notice -->
    <div
      style="
        background: #fff3f3;
        border-left: 4px solid #ff5252;
        padding: 12px 16px;
        border-radius: 4px;
        margin-top: 30px;
      "
    >
      <p style="font-size: 14px; color: #666; margin: 0">
        <strong>Important:</strong> <%= msgs.ignoreReq %>
      </p>
    </div>
  </div>

  <!-- Footer -->
  <div
    style="
      text-align: center;
      padding: 20px;
      background: #f9f9f9;
      border-top: 1px solid #eee;
      font-size: 12px;
      color: #999;
    "
  >
    <p style="margin: 5px 0">
      Need help?
      <a
        href="mailto:support@company.com"
        style="color: #8400e7; text-decoration: none"
        >Contact our support team</a
      >
    </p>
    <p style="margin: 5px 0">
      Â© <%= new Date().getFullYear() %> Othnix. All rights reserved.
    </p>
  </div>
</div>
