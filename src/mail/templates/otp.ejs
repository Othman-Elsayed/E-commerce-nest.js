<div
  style="
    font-family: 'Arial', sans-serif;
    max-width: 600px;
    margin: 0 auto;
    padding: 30px;
    background: #f9f5ff;
    border-radius: 12px;
    border: 1px solid #e8d6ff;
  "
>
  <!-- Header with Welcome Message -->
  <div style="text-align: center; margin-bottom: 25px">
    <h1 style="color: #8400e7; font-size: 24px; margin: 10px 0">
      <%= welcomeMsg %>
    </h1>
    <p style="color: #666; font-size: 16px; margin: 5px 0">
      <%= subWelcomeMsg %>!
    </p>
  </div>

  <!-- Content Box -->
  <div
    style="
      background: white;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 4px 12px rgba(132, 0, 231, 0.1);
    "
  >
    <!-- Message -->
    <div style="display: flex; align-items: center; gap: 10px">
      <img
        src="https://i.postimg.cc/htWWjt4B/logo-y.jpg"
        alt="Company Logo"
        style="height: 50px; border-radius: 50%; margin-top: 7px"
      />
      <p
        style="
          font-size: 15px;
          line-height: 1.6;
          color: #555;
          margin-left: 10px;
          margin-right: 10px;
          margin-bottom: 25px;
        "
      >
        <%= message %>
      </p>
    </div>

    <!-- Verification Code -->
    <div
      style="
        background: #8400e7;
        color: white;
        font-size: 28px;
        font-weight: bold;
        letter-spacing: 2px;
        text-align: center;
        padding: 15px 0;
        border-radius: 6px;
        margin: 30px 0;
        box-shadow: 0 4px 8px rgba(132, 0, 231, 0.2);
      "
    >
      <%= code %>
    </div>

    <!-- Footer Note -->
    <p
      style="
        font-size: 14px;
        color: #888;
        text-align: center;
        margin-top: 30px;
        border-top: 1px solid #eee;
        padding-top: 20px;
      "
    >
      This code will expire in 15 minutes.
    </p>
  </div>

  <!-- Company Footer -->
  <div
    style="text-align: center; margin-top: 25px; font-size: 12px; color: #999"
  >
    Â© <%= new Date().getFullYear() %> Othnix. All rights reserved.
  </div>
</div>
