{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "shared/i18n/**/*",
        "watchAssets": true
      },
      {
        "include": "mail/templates/**/*",
        "outDir": "dist"
      }
    ],
    "deleteOutDir": true
  }
}
